{
  "name": "storage-extract-image-text",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "generate-readme": "firebase ext:info .. --markdown > ../README.md",
    "publish-from-main": "firebase ext:dev:upload googlecloud/storage-extract-image-text --repo=https://github.com/googlecloudplatform/firebase-extensions --root=storage-extract-image-text --ref=main --project pub-ext-gcloud"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/vision": "^4.1.2",
    "firebase-admin": "^12.2.0",
    "firebase-functions": "^4.2.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "dotenv": "^16.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.4.0"
  },
  "private": true
}
