{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node", "jest"],
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
 "include": ["src", "./__tests__"],
  "exclude": ["node_modules"]
}
  
