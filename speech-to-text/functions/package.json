{
  "name": "speech-to-text",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "generate-readme": "firebase ext:info .. --markdown > ../README.md",
    "publish-from-main": "firebase ext:dev:upload googlecloud/speech-to-text --repo=https://github.com/googlecloudplatform/firebase-extensions --root=speech-to-text --ref=main --project pub-ext-gcloud"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/speech": "^7.1.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/mkdirp": "^1.0.2",
    "firebase-admin": "^12.2.0",
    "firebase-functions": "^4.3.1",
    "fluent-ffmpeg": "^2.1.3",
    "mkdirp": "^1.0.4",
    "path": "^0.12.7",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.39.2",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.4.0"
  },
  "overrides": {
    "fast-xml-parser": "^5.3.4"
  },
  "private": true
}
